<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:background="#1D1B1B"
    android:padding="10dp"
    android:textAlignment="center"
    tools:context=".DetailPage"
    tools:menu="@menu/list">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="0dp" />

            <ImageView
                android:id="@+id/Detailimage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="14dp" />

            <TextView
                android:id="@+id/DetailName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Man"
                android:textColor="#DED7D7"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TitleDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Mankind"
                android:textColor="#F1EAEA"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/DetailDesc"
                android:layout_width="match_parent"
                android:layout_height="315dp"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="1dp"
                android:fontFamily="sans-serif-medium"
                android:text="The creature that nothing satisfies it except death The creature that nothing satisfies it except death The creature that nothing satisfies it except deathThe creature that nothing satisfies it except death The creature that nothing satisfies it except death The creature that nothing satisfies it except death The creature that nothing satisfies it except death The creature that nothing satisfies it except death The creature that nothing satisfies it except death The creature that nothing satisfies it except death The creature that nothing satisfies it except death The creature that nothing satisfies it except deathv"
                android:textColor="#DED8D8"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>